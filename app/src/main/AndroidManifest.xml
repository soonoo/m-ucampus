<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soonoo.mobilecampus"
    android:versionCode="2"
    android:versionName="1.0.1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomMaterial" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".HomeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher" />
        <activity
            android:name=".LoginView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mainlist.syllabus.SyllabusView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_syllabus" >
        </activity>
        <activity
            android:name=".mainlist.scholarship.ScholarshipActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_scholarship" />
        <activity
            android:name=".mainlist.grade.GradeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_grade" />
        <activity
            android:name=".mainlist.library.LibrarySeatInfoView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_library_seat_info" />
        <activity
            android:name=".mainlist.library.LibrarySearchView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_library_book_search" />
        <activity
            android:name=".mainlist.refer.ReferView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_lec_refer_room" />
        <activity
            android:name=".mainlist.refer.ReferArticleView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_lec_refer_disp" />
        <activity
            android:name=".mainlist.notice.NoticeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_notice" />
        <activity
            android:name=".mainlist.notice.NoticeArticleView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_notice_view" />
        <activity
            android:name=".DiningActivity"
            android:label="@string/title_activity_dining" />
        <activity
            android:name=".mainlist.search.LectureSearchView"
            android:label="@string/title_activity_lecture_search" />
        <activity
            android:name=".mainlist.assignment.AssignmentView"
            android:label="@string/title_activity_assignment_view" >
        </activity>
        <activity
            android:name=".board.BoardHomeView"
            android:label="@string/title_activity_board_home_view" >
        </activity>
        <activity
            android:name=".board.article.BoardArticleView"
            android:label="@string/title_activity_board_article_view"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".board.create.CreateArticleView"
            android:label="@string/title_activity_create_article_view"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".mainlist.studentRefer.StudentReferView"
            android:label="@string/title_activity_student_refer_view" >
        </activity>
        <activity
            android:name=".mainlist.qna.QnaActivity"
            android:label="@string/title_activity_qna" >
        </activity>
        <activity
            android:name=".mainlist.qna.QnaArticleView"
            android:label="@string/title_activity_qna_article_view" >
        </activity>
    </application>

</manifest>
