<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soonoo.mobilecampus"
    android:versionCode="2"
    android:versionName="1.0.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".HomeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:logo="@mipmap/ic_launcher"></activity>
        <activity
            android:name=".LoginView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LecturePlanActivity"
            android:label="@string/title_activity_lecture_plan"></activity>
        <activity
            android:name=".SyllabusView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_syllabus">
            <!--<intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="activity_syl" />
            </intent-filter>-->
        </activity>
        <activity
            android:name=".ScholarshipActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_scholarship"></activity>
        <activity
            android:name=".GradeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_grade"></activity>
        <activity
            android:name=".LibrarySeatInfoView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_library_seat_info"></activity>
        <activity
            android:name=".LibrarySearchView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_library_book_search"></activity>
        <activity
            android:name=".ReferView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_lec_refer_room"></activity>
        <activity
            android:name=".ReferArticleView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_lec_refer_disp"></activity>
        <activity
            android:name=".NoticeView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_notice"></activity>
        <activity
            android:name=".NoticeArticleView"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_notice_view"></activity>
        <activity
            android:name=".DiningActivity"
            android:label="@string/title_activity_dining"></activity>
        <activity
            android:name=".LectureSearchView"
            android:label="@string/title_activity_lecture_search"></activity>
    </application>

</manifest>
