<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:background="#fff">
    <TextView
        android:background="#fff"
        android:text="정보"
        android:textColor="#000"
        android:paddingTop="12dp"
        android:paddingBottom="9dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/dialog_title"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<View
android:layout_width="match_parent"
android:layout_marginTop="4dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
android:layout_height="2dp"
android:background="#a70500"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">
    <TextView
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:autoLink="all"
        android:background="#fff"
        android:textSize="17dp"
        android:id="@+id/notice_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notice_content"/>

    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="2dp"
        android:background="#a70500"/>
    <TextView
        android:id="@+id/notice_confirm"
        android:clickable="true"
        android:background="@drawable/main_dialog_state"
        android:textColor="#000"
        android:layout_height="40dp"
        android:textSize="17dp"
        android:text="@string/message_confirm"
        android:layout_width="match_parent"
        android:gravity="center"/>
</LinearLayout>