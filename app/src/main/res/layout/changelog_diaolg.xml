<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="330dp"
    android:orientation="vertical">
    <TextView
        android:background="#fff"
        android:text="변경사항"
        android:textColor="#000"
        android:paddingTop="12dp"
        android:paddingBottom="9dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:id="@+id/changelog_title"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="2dp"
        android:background="#a70500"/>


    <view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chg="http://schemas.android.com/apk/res-auto"
    class="it.gmariotti.changelibs.library.view.ChangeLogListView"
        android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:id="@+id/view"
    android:layout_gravity="center"
    />

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="2dp"
        android:background="#a70500"/>
<TextView
android:id="@+id/changelog_confirm"
android:clickable="true"
android:background="@drawable/main_dialog_state"
android:textColor="#000"
android:layout_height="40dp"
android:textSize="17dp"
android:text="@string/message_confirm"
android:layout_width="match_parent"
android:gravity="center"/></LinearLayout>