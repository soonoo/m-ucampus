<resources>
    <style name="CustomMaterial" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#9f9f9f</item>
        <item name="colorControlActivated">@color/r3</item>
        <item name="colorControlHighlight">@color/r3</item>

        <item name="colorPrimary">@color/r3</item>
        <item name="colorPrimaryDark">@color/r1</item>
        <item name="android:actionBarSize">47dp</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B3B3B3</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/r3</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/r3</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#212121</item>
        <!-- Used for the background -->
        <item name="android:background">#fff</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:itemBackground">@color/r3</item>
    </style>
</resources>
